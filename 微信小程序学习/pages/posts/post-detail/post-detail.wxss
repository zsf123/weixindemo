/* pages/posts/post-detail/post-detail.wxss */

.container {
  flex-direction: column;
  position: relative;
}

.head-image {
  width: 100%;
  height: 600rpx;
}

.audio{
  width:102rpx;
  height:110rpx;
  position:absolute;
  left:50%;
  margin-left: -51rpx;
  top:200rpx;
  opacity: 0.6;
}

.author-date {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.avatar {
  width: 64rpx;
  height: 64rpx;
  margin-left: 10rpx;
}

.author {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}

.title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
}

.tool {
  margin-top: 20rpx;
}

.circle-img {
  float: right;
  margin-right: 40rpx;
  vertical-align: middle;
}

.circle-img Image {
  width: 90rpx;
  height: 90rpx;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  position: relative;
  top: 46rpx;
  z-index: -99;
  vertical-align: middle;
   margin: 0 auto;
}

.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}
